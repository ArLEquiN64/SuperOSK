<Page x:Class="HighBridge.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:view="clr-namespace:HighBridge.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
	Title="MainPage">
   <Grid>
       <Grid.ColumnDefinitions>
           <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
       <Grid Background="{StaticResource DetailBoxBlack}">
            <StackPanel>
                <Image Width="300" Height="300" Margin="50" Source="/Assets/Background.jpg"></Image>
            </StackPanel>
        </Grid>
       
       <StackPanel Grid.Column="1">
           <TextBlock Background="#33FFFFFF" Height="50" FontSize="40" Margin="20"></TextBlock>
       </StackPanel>
   </Grid>
</Page>
