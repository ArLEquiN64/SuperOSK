<Page x:Class="HighBridge.View.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
	Title="StartPage">

    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Background="#80ff80" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="FaceLife" TextAlignment="Justify" FontFamily="Microsoft Himalaya" FontWeight="Bold" FontStyle="Italic" FontSize="200"></TextBlock>
        <Grid Grid.Row="0" Grid.Column="1" Background="#80ff80"></Grid>
        <Button x:Name="SignUp" Content="Sign Up" Grid.Row ="1" Grid.Column="0" Width="500" Height="150" Click="SignUp_Click" FontSize="72" FontFamily="Impact"></Button>
        <Button x:Name="SignIn" Content="Sign In" Grid.Row ="1" Grid.Column="1" Width="500" Height="150" Click="SignIn_Click" FontSize="72" FontFamily="Impact"></Button>
    </Grid>
</Page>
